{
  "eslint.format.enable": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "css.lint.unknownAtRules": "ignore", // Tailwind CSS 사용시
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative", // path alias 사용 시
  "cSpell.ignoreWords": [
    "Pretendard",
    "lucide",
    "clsx",
    "zustand",
    "tailwindcss",
    "fullcalendar",
    "daygrid",
    "timegrid"
  ],
  "cSpell.words": [
    "cmdk",
    "noti",
    "sche",
    "tanstack"
  ]
}